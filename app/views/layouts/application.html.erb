    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>
  <body>
    <header>
      <h1><%= link_to 'I was there', root_path %></h1>
      <nav>
        <ul>
          <%== nav_menu %>
        </ul>
      </nav>
    </header>
    <div class="flex-container">
      <%= yield %>
