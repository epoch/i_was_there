<%= form_for @artist do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, :autofocus => true, :required => true %>
  </div>
  <div class="form-group">
    <%= f.label :genre %>
    <%= f.text_field :genre, :required => true %>
  </div>
  <div class="form-group">
    <%= f.label :city %>
    <%= f.text_field :city, :required => true %>
  </div>
  <div class="form-group">
    <%= f.label :country %>
    <%= f.text_field :country, :required => true %>
  </div>
  <div class="form-group">
    <%= f.label :bio %>
    <%= f.text_area :bio %>
  </div>
  <div class="form-group">
    <%= f.label :image %>
    <%= f.url_field :image %>
  </div>
  <div class="form-group">
    <%= f.submit 'Submit' %>
  </div>
<% end %>
