<%= form_for @review do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, :autofocus => true, :required => true %>
  </div>
  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content, :required => true %>
  </div>
  <div class="form-group">
    <%= f.label :image %>
    <%= f.url_field :image %>
  </div>
  <% if @review.new_record? %>
    <%= f.hidden_field :event_id, :value => params[:event_id] %>
  <% end %>
  <div class="form-group">
    <%= f.submit 'Submit' %>
  </div>
<% end %>